<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} - Pac</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS -->
    {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
    {% block stylesheets %}

        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
        <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        <link rel="stylesheet" href="{{ asset('http://fonts.googleapis.com/css?family=Open+Sans:400italic,400') }}">
        <link rel="stylesheet" href="{{ asset('http://fonts.googleapis.com/css?family=Droid+Sans') }}">
        <link rel="stylesheet" href="{{ asset('http://fonts.googleapis.com/css?family=Lobster') }}">
        <link rel="stylesheet"
              href="{{ asset('bundles/vendorgallery/assets/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet"
              href="{{ asset('/bundles/vendorgallery/assets/prettyPhoto/css/prettyPhoto.css') }}">
        <link rel="stylesheet" href="{{ asset('/bundles/vendorgallery/assets/css/flexslider.css') }}">
        <link rel="stylesheet" href="{{ asset('/bundles/vendorgallery/assets/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('/bundles/vendorgallery/assets/css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('/bundles/vendorgallery/assets/css/style2.css') }}">

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Favicon and touch icons -->
        <link rel="shortcut icon" href="{{ asset('/bundles/vendorgallery/assets/ico/favicon.ico') }}">
        <link rel="apple-touch-icon-precomposed" sizes="144x144"
              href="{{ asset('/bundles/vendorgallery/assets/ico/apple-touch-icon-144-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="114x114"
              href="{{ asset('/bundles/vendorgallery/assets/ico/apple-touch-icon-114-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="72x72"
              href="{{ asset('/bundles/vendorgallery/assets/ico/apple-touch-icon-72-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed"
              href="{{ asset('/bundles/vendorgallery/assets/ico/apple-touch-icon-57-precomposed.png') }}">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
    {% endblock %}
</head>
<body>


<!-- Site Description -->
<div class="presentation container">
    <div style="float: left; overflow: hidden"><h2>Demo<span class="violet">kopia</span>tory</h2></div>
    <ul style="overflow: hidden">


        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <li style="float: right">
                <a class="menuLink" href="{{ path('fos_user_profile_edit') }}">Edit profile</a>
            </li>
            <li style="float: right">
                <a class="menuLink" href="{{ path('fos_user_security_logout') }}">Log out</a>
            </li>
            <li style="float: right">
                <a class="menuLink" href="{{ path('vendor_gallery_user_pictures', {'userId':app.user.id}) }}">My
                    pictures</a>
            </li>
            <li style="float: right">
                <a class="menuLink" href="{{ path('vendor_gallery_upload') }}">Upload</a>
            </li>
        {% else %}
            <
            <li style="float: right">
                <a class="menuLink" href="{{ path('fos_user_registration_register') }}">Register</a>
            </li>li style="float: right">
            <a class="menuLink" href="{{ path('fos_user_security_login') }}">Login</a>
            </li>
        {% endif %}
        <li style="float: right">

            <a class="menuLink" href="{{ path('vendor_gallery_homepage') }}">Strona główna</a>
        </li>

    </ul>

</div>


<div class="navbar">


    <div class="accountInfo">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            Zalogowano użytkownika:
            <b>{{ app.user.username }}</b>
        {% else %}
            Nie zalogowano.
        {% endif %}
    </div>
</div>


{% for message in messages %}
    <div>
        {{ message }}
    </div>
{% endfor %}
<br/>
<br/>

<div id="content">{% block content %}{% endblock %}</div>

</body>
</html>
